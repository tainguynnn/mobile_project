<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_home"
        tools:context=".MathGame2Fragment">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/howtoplay"
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="38dp"
            android:src="@drawable/question_mark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="63dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/bg_round"
            android:text="Math Game"
            android:textColor="@color/primary"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginBottom="131dp"
            android:src="@drawable/math"
            app:layout_constraintBottom_toTopOf="@+id/btnMathGame1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMathGame1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/home_button_color"
            android:text="Calculate the formula"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnMathGame2"
            app:layout_constraintEnd_toEndOf="@+id/btnMathGame2"
            app:layout_constraintStart_toStartOf="@+id/btnMathGame2"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMathGame2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="158dp"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/home_button_color"
            android:text="Choose greater number"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMathGame1" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>