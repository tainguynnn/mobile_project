<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_home"
        tools:context=".ui.MathGame2Fragment">

        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/howtoplay"
            android:layout_width="68dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="38dp"
            android:src="@drawable/question_mark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_round"
            android:text="Language Game"
            android:textColor="@color/primary"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLanguageGame1"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="38dp"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/home_button_color"
            android:text="Words Shuffle"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnLanguageGame2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLanguageGame2"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="239dp"
            android:background="@drawable/bg_round"
            android:backgroundTint="@color/home_button_color"
            android:text="Country Flags"
            android:textColor="@color/primary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnLanguageGame1" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="160dp"
            android:layout_height="0dp"
            android:layout_marginBottom="65dp"
            android:src="@drawable/language"
            app:layout_constraintBottom_toTopOf="@+id/btnLanguageGame1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>